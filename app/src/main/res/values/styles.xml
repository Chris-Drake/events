<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="colorControlNormal">#fff</item>
        <item name="radioButton">@drawable/btn_radio</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Widget">
        <item name="colorAccent">@color/theme_accent_dark</item>
    </style>

    <style name="AppTheme.Widget.Spinner" parent="Theme.AppCompat"/>

    <style name="ExploreFilter" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ExploreFilter.Checkbox">
        <item name="android:checkMark">@null</item>
        <item name="android:drawableStart">?attr/radioButton</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

</resources>
